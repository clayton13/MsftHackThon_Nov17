<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cvfacial.FaceDetectionController">
	<top>
		<VBox>
			<HBox alignment="CENTER" spacing="10">
				<padding>
					<Insets bottom="10" top="10" />
				</padding>
				<CheckBox fx:id="haarClassifier" onAction="#haarSelected" text="Haar Classifier" />
				<CheckBox fx:id="lbpClassifier" onAction="#lbpSelected" text="LBP Classifier" />
			</HBox>
			<Separator />
		</VBox>
	</top>
	<center>
		<VBox alignment="CENTER" minHeight="200.0" minWidth="200.0">
			<padding>
				<Insets left="10" right="10" />
			</padding>
			<ImageView fx:id="originalFrame" preserveRatio="true">
            <viewport>
               <Rectangle2D />
            </viewport>
            <VBox.margin>
               <Insets />
            </VBox.margin>
         </ImageView>
		</VBox>
	</center>
	<bottom>
		<HBox alignment="CENTER">
			<padding>
				<Insets bottom="25" left="25" right="25" top="25" />
			</padding>
			<Button fx:id="cameraButton" alignment="center" disable="true" onAction="#startCamera" text="Start camera" />
		</HBox>
	</bottom>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="face">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
            <ImageView fx:id="spot2">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </children>
      </VBox>
   </right>
</BorderPane>
